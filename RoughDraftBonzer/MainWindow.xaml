<Window x:Class="RoughDraftBonzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Bonzer" Height="800" Width="1250"
        Closing="Window_Closing">
    <DockPanel Margin="0,0,-5,-1.5">
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,10">
            <ToggleButton Name="btnToggleListening" Click="btnToggleListening_Click">Listen</ToggleButton>
        </WrapPanel>
        <Label Name="lblDemo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48">Query Me!</Label>
        <DataGrid Margin="0,10" Name="dtGrid" ItemsSource="{Binding}" Width="568"/>
    </DockPanel>
   
</Window>
